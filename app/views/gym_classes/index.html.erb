<p id="notice"><%= notice %></p>

<h1>Listing Gym Classes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gym_classes.each do |gym_class| %>
      <tr>
        <td><%= gym_class.name %></td>
        <td><%= gym_class.start_time %></td>
        <td><%= gym_class.end_time %></td>
        <td><%= gym_class.day %></td>
        <td><%= link_to 'Show', gym_class %></td>
        <td><%= link_to 'Edit', edit_gym_class_path(gym_class) %></td>
        <td><%= link_to 'Destroy', gym_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

